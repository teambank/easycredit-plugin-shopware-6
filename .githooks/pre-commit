#!/bin/sh

echo "üîç Running ECS checks before commit..."

# Run ECS on staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep '\.php$')

if [ -z "$STAGED_FILES" ]; then
    echo "‚úÖ No PHP files changed. Skipping ECS check."
    exit 0
fi

# Run ECS check (without fixing)
vendor/bin/ecs check $STAGED_FILES
ECS_STATUS=$?

if [ $ECS_STATUS -ne 0 ]; then
    echo "‚ùå ECS found errors. Please fix them before committing."
    exit 1
fi

echo "‚úÖ ECS check passed. Proceeding with commit."
exit 0
