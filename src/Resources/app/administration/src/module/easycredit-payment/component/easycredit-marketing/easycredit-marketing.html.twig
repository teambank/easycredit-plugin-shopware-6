                                            :mapInheritance="props"
                                            :label="$tc('easycredit-payment.marketing.card.fieldsSettings.mediaLabel')"
                                            :disabled="props.isInherited"
                                            v-model="props.currentValue"
                                            @media-id-change="props.updateCurrentValue">
                            </sw-media-field>
                        </template>
                    </sw-inherit-wrapper>
                {% endblock %}
            </div>

            <div class="easycredit-marketing__image bg">
                <img :src="'/easycreditratenkauf/static/easycredit-marketing-card.png' | asset">
