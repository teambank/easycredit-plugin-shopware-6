{# @var easycredit #}
{% set easycredit = page.extensions.easycredit %}
{% if easycredit.apiKey %}
    <easycredit-express-button 
        webshop-id="{{ easycredit.apiKey }}"
        amount="{% if easycredit.amount %}{{ easycredit.amount }}{% else %}{{ amount }}{% endif%}"
        payment-types="{{ easycredit.paymentTypes |join(',') }}"
        {% if fullWidth %}full-width="true"{% endif %}
    ></easycredit-express-button>
{% endif %}