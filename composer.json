{
    "name": "easycredit/ratenkauf",
    "description": "easyCredit-Ratenkauf integration for Shopware 6",
    "version": "3.0.0",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "NETZKOLLEKTIV GmbH"
        }
    ],
    "require": {
        "shopware/core": ">= 6.4",
        "netzkollektiv/easycredit-api-v3-php": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.2",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-doctrine": "^1.3",
        "symplify/easy-coding-standard": "^10.1",
        "rector/rector": "^0.15.20"
    },
    "replace": {
        "psr/http-client": "*",
        "psr/http-message": "*"
    },
    "extra": {
        "shopware-plugin-class": "Netzkollektiv\\EasyCredit\\EasyCreditRatenkauf",
        "copyright": "(c) by NETZKOLLEKTIV GmbH",
        "label": {
            "de-DE": "easyCredit-Rechnung & Ratenkauf für Shopware 6",
            "en-GB": "easyCredit-Rechnung & Ratenkauf for Shopware 6"
        },
        "description": {
            "de-DE": "Jetzt den einfachsten Ratenkauf Deutschlands für Ihren Shopware Shop nutzen. Unser Credo einfach, fair und sicher gilt sowohl für Ratenkaufkunden als auch für Händler.",
            "en-GB": "Use the easiest installment purchase of Germany for your Shopware 6 Shop now. Easy. Fair. Pay by installments. Join today to get the simplest way of partial payment."
        },
        "manufacturerLink": {
            "de-DE": "https://www.easycredit-ratenkauf.de/",
            "en-GB": "https://www.easycredit-ratenkauf.de/"
        },
        "supportLink": {
            "de-DE": "https://www.easycredit-ratenkauf.de/",
            "en-GB": "https://www.easycredit-ratenkauf.de/"
        }
    },
    "autoload": {
        "psr-4": {
            "Netzkollektiv\\EasyCredit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netzkollektiv\\EasyCredit\\Test\\": "tests/"
        }
    },
    "config": {
      "preferred-install": {
        "netzkollektiv/ratenkaufbyeasycredit-api-v3-php": "auto",
        "*": "dist"
      },
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
